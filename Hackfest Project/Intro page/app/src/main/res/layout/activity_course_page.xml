<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses Enrolled"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/course"
        android:backgroundTint="@color/white"
        android:text="Cloud Computing"
        android:textSize="20dp"
        app:elevation="25dp"
        app:cornerRadius="25dp"
        android:textColor="@color/purple_500"/>

    <com.google.android.material.button.MaterialButton
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Quantum Computing"
        android:textSize="20dp"
        app:elevation="25dp"
        app:cornerRadius="25dp"
        android:textColor="@color/purple_500"/>

    <com.google.android.material.button.MaterialButton
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Data Mining"
        android:textSize="20dp"
        app:elevation="25dp"
        app:cornerRadius="25dp"
        android:textColor="@color/purple_500"/>

    <com.google.android.material.button.MaterialButton
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Machine Learning and AI"
        android:textSize="20dp"
        app:elevation="25dp"
        app:cornerRadius="25dp"
        android:textColor="@color/purple_500"/>

    <com.google.android.material.button.MaterialButton
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Computer Networks"
        android:textSize="20dp"
        app:elevation="25dp"
        app:cornerRadius="25dp"
        android:textColor="@color/purple_500"/>

    <com.google.android.material.button.MaterialButton
        android:clickable="true"
        android:onClick="materials"
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Operating Systems"
        android:textSize="20dp"
        app:elevation="40dp"
        app:cornerRadius="25dp"
        android:textColor="@color/purple_500"/>


</androidx.constraintlayout.widget.ConstraintLayout>